{
  "exclude": [
    "cjs/",
    "node_modules",
    "tmp/"
  ],
  "include": [
    "src/",
    "test/"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./",
    "removeComments": false,
    "resolvePackageJsonExports": false,
    "skipLibCheck": false,
    "strictNullChecks": false,
    "target": "ES2021"
  }
}
